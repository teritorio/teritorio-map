{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
